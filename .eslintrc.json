{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": ["warn", "always"],
        "quotes": ["warn", "single"],
        "no-unused-vars": "warn",
        "no-console": "off",
        "no-underscore-dangle": "off",
        "no-shadow": "off",
        "no-lonely-if": "off",
        "consistent-return": "off",
        "no-useless-escape": "off"
    }
}
